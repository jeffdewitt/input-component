{
  parser: "babel-eslint",
  env: {
    es6: true,
    browser: true
  },
  parserOptions: {
    ecmaversion: 6,
    sourceType: "module",
    ecmaFeatures: {
      jsx: true,
      experimentalObjectRestSpread: true
    }
  },
  extends: ["eslint:recommended", "plugin:react/recommended", "standard"],
  plugins: [
    "react"
  ],
  rules: {
    no-console: ["error", { allow: ["warn", "error"] }]
  },
  globals: {
    describe: true,
    expect: true,
    it: true,
    jest: true
  }
}
